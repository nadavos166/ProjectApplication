<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5sp"
    app:cardCornerRadius="15sp"
    android:layout_marginStart="5sp"
    android:layout_marginEnd="5sp"
    android:layout_marginTop="4sp"
    android:layout_marginBottom="2sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp">

        <TextView
            android:id="@+id/list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="105dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_name"
            android:id="@+id/list_item_place"
            android:layout_marginStart="105sp"
            android:layout_marginEnd="5sp"
            android:singleLine="true"
            android:text="@string/app_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_place"
            android:id="@+id/list_item_time"
            android:layout_marginStart="105sp"
            android:layout_marginEnd="5sp"
            android:singleLine="true"
            android:text="@string/app_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_time"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="105sp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:id="@+id/list_item_wateramount"/>
        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:id="@+id/imageofplant"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>